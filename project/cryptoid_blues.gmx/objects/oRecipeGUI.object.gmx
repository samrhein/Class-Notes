            <kind>1</kind>
            <string>//bypass create because it was buggy - this runs once
if start=0 {
for(i=0;i&lt;3;i+=1){
       recipeslot_inst[i] = instance_create(-100,-100,oSlotBuild)
       //create 3 materials based on build_recipe array found in each item object's create
       recipe_material[i]=instance_create( view_xview[0]+24+54*3, view_yview[0]+66+54*i, recipe_item.build_recipe[0,i] )
    }
}
if recipe_item!=noone {
    for(i=0;i&lt;3;i+=1){
        //move slots and materials with view
        recipeslot_inst[i].x=view_xview[0]+24+54*3
        recipeslot_inst[i].y=view_yview[0]+66+54*i
        
        recipe_material[i].x=view_xview[0]+24+54*3
        recipe_material[i].y=view_yview[0]+66+54*i
                
        recipe_material[i].mat_drag=false
        
        if recipe_item.build_remain[i]=0 {
            recipeslot_inst[i].selected=true
            recipeslot_inst[i].image_index=1
            total_filled+=1
        } else {
            total_filled=0
            built_timer=0
        }
        
        //if the id of the material that is dropped onto matches the current material in the loop, 
        //subtract the quantity from the build_remain array on the recipe_item sent from oInventoryGUI
        if subtract_invID = recipe_material[i] {
        if recipe_item.build_remain[i] &lt; subtract_quan {
            oInventoryGUI.addback_inv = subtract_quan - recipe_item.build_remain[i]
            recipe_item.build_remain[i]=0
        } else {
            recipe_item.build_remain[i]-= subtract_quan
            oInventoryGUI.addback_inv=0
        }
        subtract_quan=0
        subtract_invID=noone
        }
        
        //if all three materials have been added
        if total_filled&gt;=3{
            built_timer+=1
            //wait a second
            if built_timer&gt;50{
                //and reset the required quantities
                recipe_item.build_remain[i]=recipe_item.build_recipe[1,i]
                recipeslot_inst[i].selected=false
                recipeslot_inst[i].image_index=0
            }
        }
    }
}
start=1


//bypass destroy because it was buggy
if kill {
for(i=0;i&lt;3;i+=1){
        //destroy recipe slots and materials
        with recipeslot_inst[i] {
            instance_destroy()
        }
        with recipe_material[i] {
            instance_destroy()
        }
}
instance_destroy()
}
