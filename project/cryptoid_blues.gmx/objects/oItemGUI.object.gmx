            <string>with(oCategoryGUI){
    for(i=0;i&lt;3;i+=1){
        for(j=0;j&lt;3;j+=1){
                //move away old icons on category switch
                if past_cat_type != cat_type {
                    itemicon_inst[past_cat_type,j + i*3].x=-1000
                    craftslot_inst[j + i*3].selected=false
                    craftslot_inst[j + i*3].image_index=0
                    //if it's th first round of the loop and the category is switched, destroy recipe
                    if oRecipeID != noone and j+i*3=0 {
                        oRecipeID.kill=true
                        oRecipeID=noone
                    }
                }
                //move craft slots and current icons with view
                if moveall = false {
                    craftslot_inst[j + i*3].x=view_xview[0]+12+54*j
                    craftslot_inst[j + i*3].y=view_yview[0]+66+54*i

                    itemicon_inst[cat_type,j + i*3].x=view_xview[0]+12+54*j
                    itemicon_inst[cat_type,j + i*3].y=view_yview[0]+66+54*i
                    
                    //attempted destroy/creation of recipe
                    if craftslot_inst[j + i*3].selected=true {
                        //set to unique identifier of location and category
                        item_type= j + i*3+cat_type
                    }
                    //if selected isn't changing
                    if past_item_type=item_type{
                        //but selected was clicked again
                        if item_type != noone {
                        if craftslot_inst[item_type-cat_type].selected=false {
                        //everything is deselected so destroy recipe
                            if oRecipeID != noone {
                                oRecipeID.kill=true
                                oRecipeID=noone
                            }
                            item_type=noone
                            past_item_type=noone
                        }
                        }
                    }
                    
                    //test if selected item has changed
                    if past_item_type!=item_type {
                        past_item_type=item_type
                        //destroy old recipe
                        if oRecipeID != noone {
                            oRecipeID.kill=true
                            oRecipeID=noone
                        }
                        //create new recipe
                        oRecipeID = instance_create(0,0,oRecipeGUI)
                        oRecipeID.recipe_item=itemicon_inst[cat_type,j + i*3]
                        
                    }

                } else {
                //move everything away
                    craftslot_inst[j + i*3].x=-1000
                    itemicon_inst[cat_type,j + i*3].x=-1000
                    if oRecipeID != noone {
                        oRecipeID.kill=true
                    }
                }
        }
    }
    past_cat_type = cat_type

}
