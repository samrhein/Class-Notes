            <string>//Block Highlight based on mouse position////////////////////////////////

mouse_angle = point_direction(oPlayer1.x, oPlayer1.y, mouse_x, mouse_y)

if mouse_angle &lt;= 45 or mouse_angle &gt;= 315 {
    x=oPlayer1.x + 55
    y=oPlayer1.y
    dig_side = 0
} else if mouse_angle &gt; 45 and mouse_angle &lt;= 135 {
    x=oPlayer1.x
    y=oPlayer1.y - 85
    dig_side = 1
} else if mouse_angle &gt; 135 and mouse_angle &lt;= 225 {
    x=oPlayer1.x - 55
    y=oPlayer1.y
    dig_side = 2
} else if mouse_angle &gt; 225 and mouse_angle &lt; 315 {
    x=oPlayer1.x
    y=oPlayer1.y + 65
    dig_side = 3
}

if !place_snapped(48, 48) {
    move_snap(48, 48);
}
image_angle = 0

old_dig_block = dig_block
old_dig_block2 = dig_block2

block = instance_position(x,y,oSolid)
dig_block = instance_position(x,y,oDestructible)
dig_block2 = instance_position(x,y-48,oDestructible)

if block != noone {
    x=block.x
    y=block.y
    image_angle = block.image_angle
}

if block = noone {
    image_index = 0
} else {
    image_index = 1
}

if dig_block != noone and dig_block2 != noone and (dig_side=0 or dig_side=2) {
    image_index = 3
} else if dig_block != noone and (dig_block2 = noone or (dig_side=1 or dig_side=3)) {
    image_index = 2
} else if dig_block = noone and dig_block2 != noone and dig_side != 1 {
    image_index = 4
}
</string>
