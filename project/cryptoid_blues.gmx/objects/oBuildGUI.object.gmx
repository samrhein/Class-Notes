            <string>for(i=0;i&lt;4;i+=1){
    build_slot[i].x=view_xview[0]+24+216+54*i
    build_slot[i].y=view_yview[0]+global.winH-100
    build_item[i].x=view_xview[0]+24+216+54*i
    build_item[i].y=view_yview[0]+global.winH-100
}

move_left = keyboard_check_pressed(ord('A'))
move_right = keyboard_check_pressed(ord('D'))

if oNewGUI.kSelectedBuild and oNewGUI.kSelectedEquipWeap = 0 and oNewGUI.kSelectedEquipTool = 0 {
    if move_right {
        selected += 1
        //turns off all selected
        for(i=0;i&lt;4;i+=1){
            build_slot[i].highlight = false
            build_item[i].highlight = false
        }
    }
    if move_left {
        selected -= 1
        //turns off all selected
        for(i=0;i&lt;4;i+=1){
            build_slot[i].highlight = false
            build_item[i].highlight = false
        }
    }
    //loops selected
    if selected &gt; 4 {
        selected = 0
    }
    if selected &lt; -1 {
        selected = 3
    }
    //highlights selected
    if selected &lt;= 3 and selected &gt;= 0 {
        build_slot[selected].highlight = true
        build_item[selected].highlight = true
    }
} else {
    if selected &lt;= 3 and selected &gt;= 0 {
        //try to build that shit!!!!!!!!!!!!!!!!
        enough=0
        for(k=0;k&lt;build_item[selected].total_mat;k+=1){
            if oPlayer1.inventory[build_item[selected].inv_num[k]] &gt;= build_item[selected].build_recipe[1,k]{
                enough+=1
            }
        }
        //just build it already!!!!!!!!!!!!
        if enough = build_item[selected].total_mat {
            //place in inventory
            oPlayer1.inventory[selected+10] += 1
            //reduce inventory materials
            for(k=0;k&lt;build_item[selected].total_mat;k+=1){
                oPlayer1.inventory[build_item[selected].inv_num[k]] -= build_item[selected].build_recipe[1,k]
            }
        }
    }
    
    //turns off all selected
    selected = -1
    for(i=0;i&lt;4;i+=1){
        build_slot[i].highlight = false
        build_item[i].highlight = false
    }
}
